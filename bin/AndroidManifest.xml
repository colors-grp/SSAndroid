<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.colors.supersaym"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />


    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.colors.supersaym.Views.SplashActivity"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait" >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.colors.supersaym.Views.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
           
        </activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />
        <activity
            android:name="com.colors.supersaym.Views.EpisodesActivity"
            android:label="@string/title_activity_collections"
            android:screenOrientation="portrait" >
        </activity>
      
        <activity
            android:name="com.colors.supersaym.tabs.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.colors.supersaym.Views.MeActivity"
            android:label="@string/title_activity_me"
            android:screenOrientation="portrait" >
        </activity>
        <activity
           android:name="com.colors.supersaym.Views.NotificationActivity"
            android:label="@string/title_activity_notification"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.colors.supersaym.Views.ScoreboardActivity"
            android:label="@string/title_activity_scoreboard"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.colors.supersaym.Views.GuideActivity"
            android:label="@string/title_activity_guide"
            android:screenOrientation="portrait" >
             
        </activity>
        <activity  android:name="com.colors.supersaym.GuideDetailsActivity"
            android:label="@string/title_activity_guide_details" >
        </activity>
    </application>

</manifest>
